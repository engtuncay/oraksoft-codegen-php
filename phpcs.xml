<?xml version="1.0"?>
<ruleset name="Oraksoft Codegen PHP">
	<description>Project coding standard: PSR-12 plus class-file-name check</description>

	<!-- Base standard -->
	<rule ref="PSR12" />

	<!-- Ensure class name matches file name (case-sensitive) -->
	<rule ref="SlevomatCodingStandard.Classes.ClassFileName" />

	<!-- Exclude vendor and public assets -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>public/assets/*</exclude-pattern>

	<fileExtensions>
		<fileExtension>php</fileExtension>
	</fileExtensions>
</ruleset>
